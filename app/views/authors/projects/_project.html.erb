
<%if false %>
<div class='col-sm-6 col-lg-4'>
  <div class="card">
      <div class="card-topper" style='background-image: url(<%= project.banner_image_url %>);'></div>
    <div class="card-block">
       <h4 class="card-title"><%= link_to project.title, project %></h4>
       <p class="published-date"><%= project.display_day_published%></p>
       <p class="card-text"><%= truncate(project.description, length: 130) %></p>
      <%= link_to 'Read', project, class: 'btn btn-read' %>
    </div>
  </div>
</div>
<%end%>

<tr>
  <td><%= link_to project.title, authors_project_path(project) %></td>
  <td></td>
  <td><%= link_to 'Edit', edit_authors_project_path(project), class: 'btn btn-sm btn-warning' %></td>
  <td><%= link_to 'Remove', authors_project_path(project), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %></td>
</tr>
